<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="269dp"
    android:orientation="vertical" >
    
    	<!--  @FormParam("birthDate") String birthDate, -->
		<!--  @FormParam("district") String district, -->	
		<!--	@FormParam("gender") String gender,
			@FormParam("twitter") String twitter,
			@FormParam("foursquare") String foursquare,
			@FormParam("interests") String strInterests) -->
    
    <!-- username layout -->
         
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="username" />

           <EditText
               android:id="@+id/name"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="text" >
               
               <requestFocus />
           </EditText>
       </LinearLayout>
       
    
    <!-- email lyout -->
    
        <LinearLayout 
            
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="Email" />
        
        <EditText
            android:id="@+id/email"
            android:layout_width="107dp"
            android:layout_height="25dp" />
        
     </LinearLayout>
     
      
    <!--password layout -->
         <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" >
            </EditText>
        
    </LinearLayout>

     <!-- district layout -->      
     </LinearLayout>
     
         <LinearLayout 
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="District" />
          
           <EditText
               android:id="@+id/district"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="text">
               <requestFocus />
           </EditText>
         
     </LinearLayout>
     
         
         
       <!-- birthdate layout -->
       
        <LinearLayout 
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="BirthDate" />
          
           <EditText
               android:id="@+id/birthdate"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="datetime">
           <requestFocus />
           </EditText>
         
             <!-- gender layout -->
       <LinearLayout 
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Gender" />
          
           <EditText
               android:id="@+id/gender"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="text">
               <requestFocus />
           </EditText>
         
     </LinearLayout>
           
              
    
     
          
        <!-- twitter layout -->
        <LinearLayout 
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Twitter" />
          
           <EditText
               android:id="@+id/twitter"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="text">
               <requestFocus />
           </EditText>
         
      <!-- foursqaure layout -->
     </LinearLayout>
     
         <LinearLayout 
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Foursquare" />
          
           <EditText
               android:id="@+id/foursqaure"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="text">
               <requestFocus />
           </EditText>
         
     <!-- intrests layout -->
     </LinearLayout>
     
          <LinearLayout 
         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           
          <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Main Intrests" />
          
           <EditText
               android:id="@+id/intrests"
               android:layout_width="120dp"
               android:layout_height="wrap_content" 
               android:inputType="text">

               <requestFocus />
           </EditText>
         
     </LinearLayout>

       <Button
           android:id="@+id/Edit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="edit profile" />

</LinearLayout>
</ScrollView>
